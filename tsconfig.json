{
  "compilerOptions": {
    "baseUrl": "src",
    "sourceMap": true,
    "paths": {
      "components/*": ["components/*"]
    },
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "lib": ["es2015", "es2017", "es2019", "dom", "dom.iterable"],
    "strictNullChecks": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules"]
}
